############################################################
# Tsunagari Tile Engine Primary Source Makefile (gnu make) #
############################################################


### --- VARIABLES SECTION --- ###

# Compiler to use. (Suggested: "g++" or "clang")
CXX = g++

# Warning flags to enable.
WFLAGS = -Wall -Wextra -Wconversion
WFLAGS += -Wno-long-long # Disable warnings in Python code.

# Compiler and linker flags.
CXXFLAGS = $(BLDCFLAGS) -pipe -pedantic $(WFLAGS) \
	$(shell pkg-config --cflags python-2.7) $(shell xml2-config --cflags)
LDFLAGS = $(BLDLDFLAGS) -lboost_program_options -lboost_python -lgosu \
	-lphysfs $(shell pkg-config --libs python-2.7) $(shell xml2-config --libs)

# Name of testing world.
TESTWORLD = testing.world


### --- MAIN SECTION --- ###

all: tsunagari $(TESTWORLD)

depend:
	@$(CXX) $(CXXFLAGS) -MM *.cpp | perl ../scripts/filter-depend.pl

tsunagari: animation.o area.o area-tmx.o sound.o cmd.o common.o entity.o log.o \
	main.o music.o player.o python.o python_bindings.o python_random.o \
	python_timer.o resourcer.o tile.o vec.o viewport.o window.o world.o xml.o
	$(CXX) -o tsunagari *.o $(LDFLAGS)

%.world:
	cd $(basename $@) && zip --symlinks -r -0 ../$@ *

clean:
	$(RM) tsunagari *.o $(TESTWORLD)


### --- DEPENDS SECTION --- ###

# The following tells make when an object depends on a header so it can rebuild
# the object automatically. If an object isn't rebuilt it might crash the
# program. Generated by 'make depend'. Update if you change/add/remove
# a #include anywhere or if you add/remove a C++ file.

animation.o: animation.cpp animation.h cache.h common.h log.h resourcer.h \
 sound.h vec.h window.h xml.h
area.o: animation.h area.cpp area.h cache.h common.h config.h entity.h log.h \
 music.h player.h python.h resourcer.h sound.h tile.h vec.h viewport.h \
 window.h world.h xml.h
area-tmx.o: animation.h area-tmx.cpp area-tmx.h area.h cache.h common.h \
 config.h entity.h log.h music.h player.h python.h resourcer.h sound.h \
 tile.h vec.h viewport.h window.h world.h xml.h
cmd.o: cmd.cpp cmd.h common.h log.h vec.h
common.o: common.cpp common.h log.h vec.h
entity.o: animation.h area.h cache.h common.h config.h entity.cpp entity.h \
 log.h music.h player.h python.h resourcer.h sound.h tile.h vec.h viewport.h \
 window.h xml.h
log.o: config.h log.cpp log.h
main.o: cmd.h common.h config.h log.h main.cpp python.h vec.h window.h
music.o: cache.h common.h log.h music.cpp music.h python.h resourcer.h \
 sound.h vec.h window.h xml.h
player.o: animation.h area.h cache.h common.h config.h entity.h log.h \
 music.h player.cpp player.h resourcer.h sound.h tile.h vec.h viewport.h \
 window.h world.h xml.h
python_bindings.o: animation.h area.h cache.h common.h config.h entity.h \
 log.h music.h player.h python_bindings.cpp python_random.h python_timer.h \
 resourcer.h sound.h tile.h vec.h viewport.h window.h xml.h
python.o: cache.h common.h log.h python.cpp python.h python_bindings.h \
 resourcer.h sound.h vec.h window.h xml.h
python_random.o: python.h python_random.cpp python_random.h
python_timer.o: python.h python_timer.cpp python_timer.h
resourcer.o: cache.h common.h config.h log.h python.h resourcer.cpp \
 resourcer.h sound.h vec.h window.h xml.h
sound.o: cache.h common.h log.h python.h python_optional.h resourcer.h \
 sound.cpp sound.h vec.h window.h xml.h
tile.o: animation.h area.h cache.h common.h config.h entity.h log.h music.h \
 player.h python.h python_optional.h resourcer.h sound.h tile.cpp tile.h \
 vec.h viewport.h window.h xml.h
vec.o: common.h log.h python.h vec.cpp vec.h
viewport.o: animation.h area.h cache.h common.h config.h entity.h log.h \
 music.h player.h resourcer.h sound.h tile.h vec.h viewport.cpp viewport.h \
 window.h xml.h
window.o: animation.h area.h cache.h common.h config.h entity.h log.h \
 music.h player.h resourcer.h sound.h tile.h vec.h viewport.h window.cpp \
 window.h world.h xml.h
world.o: animation.h area-tmx.h area.h cache.h common.h config.h entity.h \
 log.h music.h player.h python.h resourcer.h sound.h tile.h vec.h viewport.h \
 window.h world.cpp world.h xml.h
xml.o: common.h config.h log.h vec.h xml.cpp xml.h

