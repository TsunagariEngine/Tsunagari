############################################################
# Tsunagari Tile Engine primary source Makefile (gnu make) #
############################################################


### --- VARIABLES SECTION --- ###

# Compiler to use. (Suggested: "g++" or "clang")
CXX = g++

# Warning flags to enable.
WFLAGS = -Wall -Wextra -Wconversion

# Internal Lua library.
LUACFLAGS = -I../deps/lua
LUALIB = ../deps/lua/liblua.a

# Libraries to include.
LIBS = $(LUALIB) -lgosu -lzip -lboost_program_options \
	$(shell xml2-config --libs)

# Compiler and linker flags.
CXXFLAGS = $(MYCFLAGS) -pedantic -ansi $(WFLAGS) \
	$(shell xml2-config --cflags) $(LUACFLAGS)
LDFLAGS = $(MYLDFLAGS) $(LIBS)

# Name of testing world.
TESTWORLD = babysfirst.world


### --- MAIN SECTION --- ###

all: tsunagari $(TESTWORLD)

depend:
	@$(CXX) $(CXXFLAGS) -MM *.cpp | perl ../scripts/filter-depend.pl

tsunagari: $(LUALIB) animation.o area.o cmd.o common.o entity.o entity-lua.o \
           log.o main.o player.o resourcer.o script.o script-sound.o tile.o \
           window.o world.o xml.o
	$(CXX) -o tsunagari *.o $(LDFLAGS)

%.world: %/*
	cd $(basename $@) && zip -r -0 ../$@ *

clean:
	$(RM) tsunagari *.o $(TESTWORLD)


### --- DEPENDS SECTION --- ###

# The following tells make when an object depends on a header so it can rebuild
# the object automatically. If an object isn't rebuilt it might crash the
# program. Generated by 'make depend'. Update if you change/add/remove
# a #include anywhere or if you add/remove a C++ file.

animation.o: animation.cpp animation.h common.h log.h resourcer.h xml.h \
 ../deps/lua/lauxlib.h ../deps/lua/lua.h ../deps/lua/lua.h \
 ../deps/lua/luaconf.h ../deps/lua/lualib.h
area.o: animation.h area.cpp area.h common.h entity.h log.h player.h \
 resourcer.h tile.h window.h world.h xml.h ../deps/lua/lauxlib.h \
 ../deps/lua/lua.h ../deps/lua/lua.h ../deps/lua/luaconf.h \
 ../deps/lua/lualib.h
cmd.o: cmd.cpp cmd.h common.h log.h
common.o: common.cpp common.h log.h
entity-lua.o: animation.h common.h entity-lua.cpp entity-lua.h entity.h \
 log.h resourcer.h script.h tile.h xml.h ../deps/lua/lauxlib.h \
 ../deps/lua/lua.h ../deps/lua/lua.h ../deps/lua/luaconf.h \
 ../deps/lua/lualib.h
entity.o: animation.h area.h common.h config.h entity-lua.h entity.cpp \
 entity.h log.h player.h resourcer.h script.h tile.h window.h xml.h \
 ../deps/lua/lauxlib.h ../deps/lua/lua.h ../deps/lua/lua.h \
 ../deps/lua/luaconf.h ../deps/lua/lualib.h
log.o: config.h log.cpp log.h
main.o: cmd.h common.h config.h log.h main.cpp window.h
player.o: animation.h area.h common.h config.h entity.h log.h player.cpp \
 player.h resourcer.h tile.h window.h world.h xml.h ../deps/lua/lauxlib.h \
 ../deps/lua/lua.h ../deps/lua/lua.h ../deps/lua/luaconf.h \
 ../deps/lua/lualib.h
resourcer.o: common.h config.h log.h resourcer.cpp resourcer.h window.h \
 xml.h ../deps/lua/lauxlib.h ../deps/lua/lua.h ../deps/lua/lua.h \
 ../deps/lua/luaconf.h ../deps/lua/lualib.h
script-sound.o: common.h log.h resourcer.h script-sound.cpp script-sound.h \
 script.h xml.h ../deps/lua/lauxlib.h ../deps/lua/lua.h ../deps/lua/lua.h \
 ../deps/lua/luaconf.h ../deps/lua/lualib.h
script.o: common.h log.h resourcer.h script-sound.h script.cpp script.h \
 xml.h ../deps/lua/lauxlib.h ../deps/lua/lua.h ../deps/lua/lua.h \
 ../deps/lua/luaconf.h ../deps/lua/lualib.h
tile.o: animation.h area.h common.h entity-lua.h entity.h log.h player.h \
 resourcer.h script.h tile.cpp tile.h window.h xml.h ../deps/lua/lauxlib.h \
 ../deps/lua/lua.h ../deps/lua/lua.h ../deps/lua/luaconf.h \
 ../deps/lua/lualib.h
window.o: common.h config.h log.h resourcer.h window.cpp window.h world.h \
 xml.h ../deps/lua/lauxlib.h ../deps/lua/lua.h ../deps/lua/lua.h \
 ../deps/lua/luaconf.h ../deps/lua/lualib.h
world.o: animation.h area.h common.h entity.h log.h player.h resourcer.h \
 tile.h window.h world.cpp world.h xml.h ../deps/lua/lauxlib.h \
 ../deps/lua/lua.h ../deps/lua/lua.h ../deps/lua/luaconf.h \
 ../deps/lua/lualib.h
xml.o: log.h xml.cpp xml.h

